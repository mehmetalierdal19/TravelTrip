@model TravelTrip.Models.Siniflar.Yorumlar
@{
    ViewBag.Title = "YorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("YorumGuncelle", "Admin", FormMethod.Post))
{
    <div class="form-group w-75 mx-auto mt-5">
        <h2 class="">Yorum Güncelleme</h2>
        <div class="mt-3 mb-4">
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @type="hidden" })
        </div>
        <div class="mb-4">
            <label class="form-label fw-bold">Kullanıcı Adı:</label>
            @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", @disabled = "true"})
        </div>
        <div class="mb-4">
            <label class="form-label fw-bold">Mail:</label>
            @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @disabled = "true" })
        </div>
        <div class="mb-4">
            <label class="form-label fw-bold">Yorum:</label>
            @Html.TextAreaFor(x => x.Yorum, 15, 1, new { @class = "form-control"})
        </div>
        <div class="mb-4">
            <label class="form-label fw-bold">Blog:</label>
            @Html.TextBoxFor(x => x.Blog.Baslik, new { @class = "form-control", @disabled = "true"})
        </div>
        <button class="btn btn-success">Kaydet</button>
    </div>
}


