@using TravelTrip.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-3">Yorum Listesi</h2>

<table class="table table-hover mt-4">
    <thead>
        <tr>
            <th>Yorum ID</th>
            <th>Kullanıcı Adı</th>
            <th>Mail Adresi</th>
            <th>Yorum</th>
            <th>Blog</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.KullaniciAdi</td>
                <td>@x.Mail</td>
                <td>@x.Yorum</td>
                <td><a class="text-decoration-none" href="/Blog/BlogDetay/@x.Blog.ID">@x.Blog.Baslik</a></td>
                <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Admin/YorumGetir/@x.ID" class="btn btn-primary">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

