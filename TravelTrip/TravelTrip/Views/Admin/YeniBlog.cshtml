@model TravelTrip.Models.Siniflar.Blog
@{
    ViewBag.Title = "YeniBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form class="form-group w-75 mx-auto mt-5" method="post">
    <h2 class="">Yeni Blog Ekleme</h2>
    <div class="mt-5 mb-4">
        <label class="form-label fw-bold">Başlık:</label>
        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    </div>
    <div class="mb-4">
        <label class="form-label fw-bold">Tarih:</label>
        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    </div>
    <div class="mb-4">
        <label class="form-label fw-bold">Resim URL:</label>
        @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
    </div>
    <div class="mb-4">
        <label class="form-label fw-bold">Metin:</label>
        @Html.TextAreaFor(x => x.Metin, 15, 1, new { @class = "form-control" })
    </div>
    <button class="btn btn-success">Kaydet</button>

</form>

